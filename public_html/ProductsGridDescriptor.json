{
    "autoBind": true,
    "columnMenu": true,
    "columns": [
        {"field": "Part_Number", "title": "Item Number", "width": 120, "filterable": true}, 
        {"field": "Part_Name", "title": "Item Name", "filterable": false}, 
        {"field": "Revision", "title": "Version", "width": 80, "filterable": true},  
        {"field": "Phase", "title": "Status", "width": 120, "filterable": true},
        {"command": [
            {"name": "edit", "text": {"edit": "Edit", "update": "Save", "cancel": "Cancel changes"}},
            {"name": "destroy", "text": "Delete"}],
            "title": "&nbsp;",
            "width": 170
        }
    ],
    "dataSource" : {
        "batch": false,
        "pageSize": 15,
        "schema": {
            "model": {
                "id": "uid",            
                "fields": {
                    "Part_Number": {
                        "type": "String",
                        "editable": true,
                        "nullable": false,
                        "validation": {"required": true}
                   },
                    "Part_Name": {
                        "type": "String",
                        "editable": true,
                        "nullable": true
                   },
                    "Revision": {
                        "type": "String",
                        "editable": true,
                        "nullable": false,
                        "defaultValue": "A",
                        "validation": {"required": true}
                    },
                    "Phase": {
                        "type": "String",
                        "editable": true,
                        "nullable": false,
                        "defaultValue": "Unreleased",
                        "validation": {"required": true}
                    }
                }
            }
        },
        "transport": {
            "read": {
                "url": "./ProductSummary.json",
                "type": "GET",
                "dataType": "json"
            },
            "create": {
                "url": "./ProductsSampleCreate.json",
                "type": "GET",
                "dataType": "json"
            },
            "destroy": {
                "url": "./ProductsSampleDestroy.json",
                "type": "GET",
                "dataType": "json"
            },
            "update": {
                "url": "./ProductsSampleUpdate.json",
                "type": "GET",
                "dataType": "json"
            }
        }      
    },
    "editable":
        {"mode": "inline"},
    "filterable": true,
    "groupable": false,
    "height": 300,
    "pageable": 
        {"refresh": true, "pageSizes": [5, 10, 20, 100], "input": true},
    "resizable": true,
    "scrollable": true,
    "selectable": "row",
    "sortable": true,
    "toolbar": [
        {"name": "create", "text": "Create New Product"}
    ]
}
